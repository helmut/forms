{
	"name": "helmut/forms",
	"description": "A customisable and testable form abstraction library.",
	"keywords": [
		"form", "field", "request", "model", "text", "email", "name", "checkbox", 
		"checkboxes", "dropdown", "password", "input", "twig", "blade", "mustache", 
        "symfony", "laravel"
	],
	"license": "MIT",
	"authors": [
        {
            "name": "helmut",
            "email": "helmut.github@gmail.com"
        }
    ], 
	"require": {
 		"php": ">=5.5.0",
 		"mustache/mustache": "~2.0",
 		"twig/twig": "~1.0"
	},
	"require-dev": {
		"phpunit/phpunit": "~4.0",
		"mockery/mockery": "0.9.*",
		"codeception/codeception": "~2.1"
	},    	
    "autoload": {
        "psr-4": {
            "Helmut\\Forms\\": "src/"
        }
    },
    "autoload-dev": {
        "files": [
            "tests/unit/FormTestCase.php"
        ],
		"psr-4": {
            "Helmut\\Forms\\Testing\\Stubs\\": "tests/unit/stubs/",
            "App\\Forms\\": "demo/Forms/"
        }
    }
}
